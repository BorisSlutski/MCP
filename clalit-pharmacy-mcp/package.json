{
  "name": "clalit-pharmacy-mcp",
  "version": "1.0.0",
  "description": "MCP server for checking medication stock availability in Clalit pharmacies across Israel. Search medications, find nearby pharmacies, and check real-time stock.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "clalit-pharmacy-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsc && node dist/http-server.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "clalit",
    "pharmacy",
    "medication",
    "israel",
    "healthcare",
    "puppeteer",
    "ai",
    "claude",
    "cursor"
  ],
  "author": "Boris Slutski",
  "license": "MIT",
  "homepage": "https://github.com/BorisSlutski/MCP/tree/main/clalit-pharmacy-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BorisSlutski/MCP.git",
    "directory": "clalit-pharmacy-mcp"
  },
  "bugs": {
    "url": "https://github.com/BorisSlutski/MCP/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^23.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
