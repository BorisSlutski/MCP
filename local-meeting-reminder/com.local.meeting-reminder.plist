<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.local.meeting-reminder</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>$HOME/local-meeting-reminder/start.sh</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>$HOME/local-meeting-reminder/reminder.log</string>
    
    <key>StandardErrorPath</key>
    <string>$HOME/local-meeting-reminder/reminder-error.log</string>
    
    <key>WorkingDirectory</key>
    <string>$HOME/local-meeting-reminder</string>
</dict>
</plist>
